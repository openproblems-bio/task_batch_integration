# ViashHelp: Display helpful explanation about this executable
function ViashHelp {
  echo "scgpt_finetuned build_main"
  echo ""
  echo "scGPT is a foundation model for single-cell biology based on a generative"
  echo "pre-trained transformer and trained on a repository of over 33 million cells."
  echo ""
  echo "Here, we fine-tune the pre-trained model for the batch integration task."
  echo ""
  echo "Arguments:"
  echo "    --input"
  echo "        type: file, required parameter, file must exist"
  echo "        example:"
  echo "resources_test/task_batch_integration/cxg_immune_cell_atlas/dataset.h5ad"
  echo ""
  echo "    --output"
  echo "        type: file, required parameter, output, file must exist"
  echo "        example:"
  echo "resources_test/task_batch_integration/cxg_immune_cell_atlas/integrated.h5ad"
  echo "        Must contain at least one of:"
  echo "          - Feature: the corrected_counts layer"
  echo "          - Embedding: the X_emb obsm"
  echo "          - Graph: the connectivities and distances obsp"
  echo ""
  echo "    --model_name"
  echo "        type: string"
  echo "        default: scGPT_human"
  echo "        choices: [ scGPT_human, scGPT_CP ]"
  echo "        String giving the name of the scGPT model to use"
  echo ""
  echo "    --model"
  echo "        type: file, file must exist"
  echo "        Path to the directory containing the scGPT model specified by model_name"
  echo "        or a .zip/.tar.gz archive to extract. If not given the model will be"
  echo "        downloaded."
  echo ""
  echo "    --n_hvg"
  echo "        type: integer"
  echo "        default: 3000"
  echo "        Number of highly variable genes to use."
}

# initialise variables
